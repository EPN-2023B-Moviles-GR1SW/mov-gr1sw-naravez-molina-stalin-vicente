<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_addCategory"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearCategoria"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="85dp">

    <TextView
        android:id="@+id/lblBienvenida4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_input"
        android:drawableStart="@drawable/left_3"
        android:drawablePadding="15dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="Nueva Categoria"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/primary_color_app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/icono_añadir"
        app:layout_constraintEnd_toStartOf="@+id/icono_añadir"
        app:layout_constraintTop_toTopOf="@+id/icono_añadir"
        app:srcCompat="@drawable/icon__list_" />

    <ImageView
        android:id="@+id/btn_crear_categoria"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/group_3" />

    <EditText
        android:id="@+id/titulo_categoria"
        android:layout_width="333dp"
        android:layout_height="41dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="text"
        android:text="Título"
        android:textColor="#80000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblBienvenida4" />

    <EditText
        android:id="@+id/icono_añadir"
        android:layout_width="333dp"
        android:layout_height="36dp"
        android:layout_marginTop="24dp"
        android:drawableEnd="@drawable/keyboard_arrow_down"
        android:ems="10"
        android:inputType="text"
        android:text="Icono-Default"
        android:textColor="#80000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/titulo_categoria"
        app:layout_constraintStart_toStartOf="@+id/titulo_categoria"
        app:layout_constraintTop_toBottomOf="@+id/titulo_categoria" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#D9D9D9"
        app:itemIconTint="@color/primary_color_app"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/navmenu" />
</androidx.constraintlayout.widget.ConstraintLayout>