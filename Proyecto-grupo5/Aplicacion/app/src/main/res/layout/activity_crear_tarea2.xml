<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearTarea"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="85dp">

    <TextView
        android:id="@+id/lblBienvenida7"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_input"
        android:drawableStart="@drawable/left_3"
        android:drawablePadding="15dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="Nueva Tarea"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/primary_color_app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_crear_tarea2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/group_3" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextText3"
        app:layout_constraintEnd_toStartOf="@+id/editTextText3"
        app:layout_constraintTop_toTopOf="@+id/editTextText3"
        app:srcCompat="@drawable/tear_off_calendar" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextText4"
        app:layout_constraintEnd_toStartOf="@+id/editTextText4"
        app:layout_constraintTop_toTopOf="@+id/editTextText4"
        app:srcCompat="@drawable/notificacion" />

    <EditText
        android:id="@+id/txt_titulo_tarea"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Título"
        android:inputType="text"
        android:textColor="#80000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblBienvenida7" />

    <EditText
        android:id="@+id/txt_descripcion_tarea"
        android:layout_width="333dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Añade una descripción"
        android:inputType="text"
        android:textColor="#80000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_titulo_tarea"
        app:layout_constraintStart_toStartOf="@+id/txt_titulo_tarea"
        app:layout_constraintTop_toBottomOf="@+id/txt_titulo_tarea" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Fecha de vencimiento"
        android:inputType="text"
        android:textColor="#80000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_descripcion_tarea"
        app:layout_constraintStart_toStartOf="@+id/txt_descripcion_tarea"
        app:layout_constraintTop_toBottomOf="@+id/txt_descripcion_tarea" />

    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Agrega un recordatorio"
        android:inputType="text"
        android:textColor="#80000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextText3"
        app:layout_constraintStart_toStartOf="@+id/editTextText3"
        app:layout_constraintTop_toBottomOf="@+id/editTextText3" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_descripcion_tarea"
        app:layout_constraintEnd_toStartOf="@+id/txt_descripcion_tarea"
        app:layout_constraintTop_toTopOf="@+id/txt_descripcion_tarea"
        app:srcCompat="@drawable/hint" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="1dp"
        android:background="#D9D9D9"
        app:itemIconTint="@color/primary_color_app"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/navmenu" />

</androidx.constraintlayout.widget.ConstraintLayout>